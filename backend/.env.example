# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Text-to-Speech Credentials
# Set this to the path of your Google Cloud service account JSON file
# Example: GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json
GOOGLE_APPLICATION_CREDENTIALS=

# App Configuration
APP_NAME=Turtlector API
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend,http://localhost
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.bmp,.webp,.mp3,.wav,.m4a,.ogg,.flac

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=